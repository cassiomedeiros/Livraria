@model Livraria.Models.UsuarioEmpresa

@{
    ViewBag.Title = "Exclusão de Usuário x Empresa";
}

<h2>Exclusão de Usuário x Empresa</h2>

<h3>Tem certeza de que deseja excluir?</h3>
<div>
    <h4>UsuarioEmpresa</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Empresa
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Empresa.NomeFantasia)
        </dd>

        <dt>
            Usuário
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Usuario.Nome)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-default" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>
