@model IEnumerable<Livraria.Models.Fornecedor>

@{
    ViewBag.Title = "Fornecedores";
}

<h2>Fornecedores</h2>

<p>
    @Html.ActionLink("Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Empresa
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PessoaFisica)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CNPJCPF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RazaoSocial)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Empresa.NomeFantasia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PessoaFisica)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CNPJCPF)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RazaoSocial)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.FornecedorId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.FornecedorId }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.FornecedorId })
        </td>
    </tr>
}

</table>
