<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Gestão de Livraria</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Gestão de Livraria", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Cadastros<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li> @Html.ActionLink("Usuário", "Index", "Usuario")</li>
                            <li> @Html.ActionLink("Empresa", "Index", "Empresa")</li>
                            <li> @Html.ActionLink("Usuário x Empresa", "Index", "UsuarioEmpresa")</li>
                            <li> @Html.ActionLink("Fornecedor", "Index", "Fornecedor")</li>
                            <li> @Html.ActionLink("Cliente", "Index", "Cliente")</li>
                            <li> @Html.ActionLink("Autor", "Index", "Autor")</li>
                            <li> @Html.ActionLink("Livro", "Index", "Livro")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Movimentações<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li> @Html.ActionLink("Entrada de Estoque", "Index", "EntradaEstoque")</li>
                            <li> @Html.ActionLink("Perda de Estoque", "Index", "PerdaEstoque")</li>
                            <li> @Html.ActionLink("Venda", "Index", "Venda")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Gestão de Livraria</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>